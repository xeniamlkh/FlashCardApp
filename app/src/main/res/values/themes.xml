<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlashCardApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <item name="colorError">@color/colorError</item>
        <item name="android:textColor">@color/textColor</item>

        <item name="android:progressTint">@color/progressTint</item>
        <item name="titleTextColor">@color/textColor</item>

        <item name="tint">@color/textColor</item>
        <item name="iconTint">@color/textColor</item>

        <item name="snackbarStyle">@style/SnackBar</item>
        <item name="snackbarTextViewStyle">@style/SnackBarTextStyle</item>

        <item name="android:windowSplashScreenAnimationDuration">1000</item>

    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="layout_constraintVertical_bias">0.01</item>
    </style>

    <style name="TitleElements">
        <item name="android:layout_margin">10dp</item>
        <item name="layout_constraintVertical_bias">0.01</item>
    </style>

    <style name="TextInput" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextInputFirst" parent="@style/TextInput">
        <item name="layout_constraintVertical_bias">0.3</item>
    </style>

    <style name="TextInputSecond" parent="@style/TextInput">
        <item name="layout_constraintVertical_bias">0.6</item>
    </style>

    <style name="WarningText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="CardText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="CardViewFront">
        <item name="cardBackgroundColor">@color/colorCardFront</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="CardViewBack">
        <item name="cardBackgroundColor">@color/colorCardBack</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="SnackBarTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="SnackBar" parent="ThemeOverlay.Material3.Snackbar">
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

</resources>